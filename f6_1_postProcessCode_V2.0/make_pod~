#beginning of the makefile
MF = make_pod
FC = mpif90
OLEVEL = -O2 -assume buffered_io
MKLSWITCH =  -mkl
#VECOPT = -xhost
#MKINC  = -I${MKLROOT}/include
IPO = -ipo
#DBOPTS = -g -traceback
FFLAGS = $(OLEVEL) $(DBOPTS) $(VECOPT) $(IPO) $(MKLSWITCH)
#MKLIBS = -L${MKLROOT}/lib/intel64 -lmkl_intel_lp64 -lmkl_core -lmkl_sequential -lpthread -lm -ldl
#FLIBS = -L/work/03390/sdharmar/lonestar/apps/lapack-3.5.0 -llapack -lrefblas -lgfortran
LFLAGS = $(FFLAGS)
vpath %.f90 src
EXE =  podexe
SRC =  modules.f90\
    interpol.f90\
    readData.f90\
    arrayops.f90\
    fluctuation.f90\
    writeData.f90\
    fftpack.f90\
    integrations.f90\
    mathops.f90\
    podroutines.f90\
    podprogram_3d.f90
#
# No need to edit below this line



.SUFFIXES:
.SUFFIXES: .f90 .o .mod

OBJ= $(SRC:.f90=.o)

.f90.o:
	$(FC) $(FFLAGS) -c $<

$(EXE):	$(OBJ)
	$(FC) $(LFLAGS) -o $@ $(OBJ) 
clean:
	rm -f *.mod $(OBJ) $(EXE)